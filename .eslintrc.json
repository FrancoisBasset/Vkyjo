{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-essential"
	],
	"overrides": [
		{
			"files": [
				"**/__tests__/*.{cy,spec}.{js,ts,jsx,tsx}",
				"cypress/e2e/**/*.{cy,spec}.{js,ts,jsx,tsx}"
			],
			"extends": [
				"plugin:cypress/recommended"
			]
		}
	],
	"ignorePatterns":[
		"cypress.config.js",
		"cypress/support/component.js"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"vue"
	],
	"rules": {
		"eol-last": "error",
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}